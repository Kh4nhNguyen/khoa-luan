<!DOCTYPE html>
<html>
<head>
    <%-include("layout/head.ejs",{title:"Danh muc san pham"})%>
    <link rel="stylesheet" href="/static/site/css/category.css">
</head>
<body>

<!--	Header	-->
<%-include("layout/header.ejs")%>
<!--	End Header	-->

<!--	Body	-->
<div id="body">
	<div class="container">
    	<div class="row">
        	<div class="col-lg-12 col-md-12 col-sm-12">
            	<%-include("layout/menu.ejs")%>
            </div>
        </div>
        <div class="row">
        	<div id="main" class="col-lg-8 col-md-12 col-sm-12">
            	<!--	Slider	-->
                <%-include("layout/slide.ejs")%>
                <!--	End Slider	-->
                
                <!--	List Product	-->
                <div class="products">
                    <h3><%=category.title%> (hiện có <%=totals%> sản phẩm)</h3>
                    <div class="product-list card-deck">
                        <%for(let product of products){%>
                            <%-include('./component/product-item.ejs',{
                                product:product
                             })%>
                        <%}%>
                    </div>
                </div>
                <!--	End List Product	-->
                
                <div id="pagination">
                    <ul class="pagination">
                        <%if(page>1){%>
                        <li class="page-item"><a class="page-link" href="/category-<%=category.slug%>.<%=category.id%>?page=<%=page-1%>">Trang trước</a></li>
                        <%}%>
                        <%for(x in pages){%>
                            <%if(pages[x]!=='...'){%>
                                <li class="page-item <%if(page===pages[x]){%> return active<%}%>">
                                    <a class="page-link" href="/category-<%=category.slug%>.<%=category.id%>?page=<%=pages[x]%>"><%=pages[x]%></a>
                                </li>
                            <%}else{%>
                                <li class="page-item" onclick="return false">
                                    <a class="page-link" href="/category-<%=category.slug%>.<%=category.id%>?page=<%=pages[x]%>"><%=pages[x]%></a>
                                </li>
                            <%}%>
                        <%}%>
                        <%if(page<totalPage){%>
                        <li class="page-item"><a class="page-link" href="/category-<%=category.slug%>.<%=category.id%>?page=<%=page+1%>">Trang sau</a></li>
                        <%}%>
                    </ul> 
                </div>
                
            </div>
            
            <%-include("layout/sidebar.ejs")%>
        </div>
    </div>
</div>
<!--	End Body	-->

<%-include("layout/footer.ejs")%>
<!--	End Footer	-->













</body>
</html>
