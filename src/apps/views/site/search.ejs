<!DOCTYPE html>
<html>
<head>
    <%-include("layout/head.ejs",{title:"Tim kiems san pham"})%>
    <link rel="stylesheet" href="/static/site/css/search.css">
</head>
<body>

<!--	Header	-->
<%-include("layout/header.ejs")%>
<!--	End Header	-->

<!--	Body	-->
<div id="body">
	<div class="container">
    	<div class="row">
        	<div class="col-lg-12 col-md-12 col-sm-12">
            	<%-include("layout/menu.ejs")%>
            </div>
        </div>
        <div class="row">
        	<div id="main" class="col-lg-8 col-md-12 col-sm-12">
            	<!--	Slider	-->
                <%-include("layout/slide.ejs")%>
                <!--	End Slider	-->
                
                <!--	List Product	-->
                <div class="products">
                    <div id="search-result">Kết quả tìm kiếm với sản phẩm <span><%=key_word%></span></div>
                    <div class="product-list card-deck">
                        <%for(let product of products){%>
                            <%-include('./component/product-item.ejs',{product:product})%>
                        <%}%>
                    </div>
                </div>
                <!-- vì là phương thức get nên khi kích hoạt là tự truyền cả từ khóa lên url -->
                <!--	End List Product	-->
                
                <div id="pagination">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Trang trước</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Trang sau</a></li>
                    </ul> 
                </div>
                
            </div>
            
            <%-include("layout/sidebar.ejs")%>
        </div>
    </div>
</div>
<!--	End Body	-->

<%-include("layout/footer.ejs")%>
<!--	End Footer	-->













</body>
</html>
