<!DOCTYPE html>
<html>

<head>
    <%-include('../layout/head.ejs',{title:"Quản lý đặt"})%>
</head>

<body>
    <%-include('../layout/header.ejs')%>
        <%-include('../layout/sidebar.ejs')%>

            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                <div class="row">
                    <ol class="breadcrumb">
                        <li><a href="#"><svg class="glyph stroked home">
                                    <use xlink:href="#stroked-home"></use>
                                </svg></a></li>
                        <li class="active">Danh sách sản phẩm</li>
                    </ol>
                </div>
                <!--/.row-->

                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Danh sách sản phẩm</h1>
                    </div>
                </div>
                <!--/.row-->
                <div id="toolbar" class="btn-group">
                    <div class="col-lg-12">
                        <h1 class="page-header">Có <b style="color: #cb1c22;">
                            <%=totalProductComplete%></b> đơn hoàn thành : 
                            <b style="color: #cb1c22;"><%=new Intl.NumberFormat("vi-VN",{style:"currency",currency:"VND"}).format(totalProductsPrice)%>
                            </b></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <table data-toolbar="#toolbar" data-toggle="table">
                                    <thead>
                                        <tr>
                                            <th data-field="id" data-sortable="true">ID</th>
                                            <th data-field="name" data-sortable="true">Tên sản phẩm</th>
                                            <th data-field="price" data-sortable="true">Giá</th>
                                            <th>Ảnh sản phẩm</th>
                                            <th>Trạng thái</th>
                                            <th>Danh mục</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% let count=1%>
                                        <%for(x in products){%>
                                            <tr>
                                                <td style=""><%= skip + count++%></td>
                                                <td style=""><%=products[x].name%></td>
                                                <td style=""><%=new Intl.NumberFormat("vi-VN",{style:"currency",currency:"VND"}).format(products[x].price)%></td>
                                                <td style="text-align: center"><img width="130" height="180"
                                                        src="/static/images/<%=products[x].thumbnail%>" /></td>
                                                <%if(products[x].is_stock){%>
                                                    <td><span class="label label-success">Còn hàng</span></td>
                                                <%}else{%>
                                                    <td><span class="label label-danger">Hết hàng</span></td>
                                                <%}%>
                                                <td><%=products[x].createdAt.toDateString()%></td>
                                                <td class="form-group">
                                                    <%if(!products[x].is_complete){%>
                                                    <a href="/admin/order/complete/<%=products[x]._id%>" class="btn btn-success" 
                                                        onclick="return confirm('Bạn có xác nhận hoàn thành không?');"><i
                                                            class="glyphicon glyphicon-ok"></i></a>
                                                    <%}%>
                                                </td>
                                            </tr>
                                            <%}%>
                                    </tbody>
                                </table>
                            </div>
                            <div class="panel-footer">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <%if(page>1){%>
                                        <li class="page-item"><a class="page-link" href="/admin/products/?page=<%=page-1%>">&laquo;</a></li>
                                        <%}%>
                                        <%for(x in pages){%>
                                            <%if(pages[x]!=='...'){%>
                                                <li class="page-item <%if(page===pages[x]){%> return active<%}%>"><a class="page-link" href="/admin/products/?page=<%=pages[x]%>"><%=pages[x]%></a></li>
                                            <%}else{%>
                                                <li class="page-item"><a class="page-link" onclick="return false" href="/admin/products/?page=<%=pages[x]%>"><%=pages[x]%></a></li>
                                            <%}%>
                                        <%}%>
                                        <%if(page<totalPages){%>
                                        <li class="page-item"><a class="page-link" href="/admin/products/?page=<%=page+1%>">&raquo;</a></li>
                                        <%}%>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/.row-->
            </div>
            <!--/.main-->
            <%-include('../layout/footer.ejs')%>
</body>

</html>